<!doctype html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <title>SoundCloud Rec Editor</title>
  <style>
    @import url("/css/imgareaselect-animated.css");

    body {
      background-color: #efefef;
    }

    #wrapper {
      margin: 10px 0 10px 0;
    }

    #player, #sequencer {
      position: relative;
      height: 280px;
      width: 100%;
    }

    #player .waveform {
      height: 100%;
      background-color: #aee;
    }

    #sequencer .waveform {
      height: 100%;
    }

    .playhead {
      position: absolute;
      top: 0;
      left: 0;
      background-color: #8a8a8a;
      float: left;
      height: 100%;
      width: 1px;
    }

    #sequencer .clip {
      display: inline-block;
      background-color: #eeaeae;
      height: 100%;
      margin: 0;
      padding: 0;
      float: left;
    }
  </style>
</head>
<body>
  <div id="wrapper">
    <div id="player">
      <div class="waveform"></div>
      <!-- <div class="playhead"></div> -->
    </div>
    <div id="sequencer">
      <div class="waveform"></div>
      <div class="playhead"></div>
    </div>
  </div>
  <script src="/js/jquery.js"></script>
  <script src="/js/jquery.imgareaselect.min.js"></script>
  <script>WEB_SOCKET_SWF_LOCATION = '/WebSocketMainInsecure.swf';</script>
  <script src="http://cdn.socket.io/stable/socket.io.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>
